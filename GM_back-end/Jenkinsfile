pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'goal-backend-app'
        DOCKER_TAG = "${BUILD_NUMBER}"
        DB_URL = 'jdbc:postgresql://database1.czmqgckksdyx.us-east-1.rds.amazonaws.com:5432/postgres'
        DB_USER = 'postgres'
        DB_PASSWORD = 'student#revature'
        JWT_SECRET = "${JWT_SECRET}"
        PROJECT_SUBFOLDER = 'GM_back-end'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout the code from Git
                    checkout scm
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    dir("${PROJECT_SUBFOLDER}") {
                        sh 'mvn clean package -DskipTests'
                    }
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    dir("${PROJECT_SUBFOLDER}") {
                        sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    dir("${PROJECT_SUBFOLDER}") {
                        sh 'mvn test'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Stop and remove any existing container with the same name
                    sh "docker stop ${DOCKER_IMAGE} || true"
                    sh "docker rm ${DOCKER_IMAGE} || true"
                    
                    // Run the new Docker container
                    sh """
                    docker run -d \\
                        --name ${DOCKER_IMAGE} \\
                        -p 8081:8080 \\
                        -e SPRING_DATASOURCE_URL='jdbc:postgresql://database1.czmqgckksdyx.us-east-1.rds.amazonaws.com:5432/postgres' \\
                        -e SPRING_DATASOURCE_USERNAME='postgres' \\
                        -e SPRING_DATASOURCE_PASSWORD='student#revature' \\
                        -e JWT_SECRET=${JWT_SECRET} \\
                        --restart unless-stopped \\
                        ${DOCKER_IMAGE}:${DOCKER_TAG}
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}